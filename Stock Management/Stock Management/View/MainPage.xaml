        <Image Margin="-1,0,440,828" Source="ms-appx:///Assets/bilka_logo.png" Stretch="Fill" Opacity="0.3"/>
        <ListView HorizontalAlignment="Left" Margin="548,172,0,0" VerticalAlignment="Top" CanReorderItems="True" ItemsSource="{Binding ProductCatalogSingleton.ProductList}" ItemTemplate="{StaticResource ProductTemplate1}">
            <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
        </ListView>
        <ListView HorizontalAlignment="Left" Height="161" Margin="286,266,0,0" VerticalAlignment="Top" Width="257"/>

    </Grid>
</Page>
